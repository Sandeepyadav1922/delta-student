<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-10 col-lg-8 offset-1 offset-lg-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="add a catchy title" type="text" class="form-control" required>
        <div class="valid-feedback">Title looks good</div>
        </div>
    
    <div class="mb-3">
        <lable for="description" class="form-babel">description</lable>
        <textarea name="listing[description]" type="text" class="form-control" required></textarea>
        <div class="invalid-feedback">Please inter a short description</div>
    </div>

    <div class="mb-3">
        <lable for="image" class="form-label">Upload Listing image</lable>
        <input name="listing[image]" type="file" class="form-control" required>
    </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]" placeholder="1200" class="form-control" required>
        <div class="invalid-feedback">Price should be valid</div>

        </div>
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">country</lable>
            <input name="listing[country]" placeholder="india" type="text" class="form-control" required>
        <div class="invalid-feedback">Country should be valid</div>

        </div>
    </div>

    <div class="mb-3">
        <lable for="location" class="form-label">location</lable>
        <input name="listing[location]" placeholder="Delhi" type="text" class="form-control" required>
        <div class="invalid-feedback">Location should be valid</div>
    </div>
    <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
</div>
</div>